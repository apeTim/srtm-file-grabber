<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:maps="http://schemas.microsoft.com/dotnet/2021/maui/maps"
             x:Class="SrtmGrabber.MainPage"
             BackgroundColor="{AppThemeBinding Light={StaticResource Gray100}, Dark={StaticResource Gray900}}">

    <ContentPage.Resources>
        <Color x:Key="CustomPink">#512BD4</Color>
        <Color x:Key="CustomGray">#2D2D2D</Color>
        <Color x:Key="ErrorColor">#FF6347</Color>
    </ContentPage.Resources>

    <ScrollView>
        <VerticalStackLayout
            Padding="30,20"
            Spacing="20">
            
            <Label
                Text="SRTM File Grabber"
                Style="{StaticResource Headline}"
                TextColor="White"
                SemanticProperties.HeadingLevel="Level1"
                HorizontalOptions="Center" />

            <Label
                x:Name="FileCountLabel"
                Text="Loading SRTM files..."
                TextColor="White"
                HorizontalOptions="Center"
                Margin="0,-10,0,0" />

            <!-- Map for coordinate selection -->
            <Frame Padding="0" BorderColor="Gray">
                <maps:Map x:Name="CoordinateMap"
                         HeightRequest="400"
                         IsZoomEnabled="True"
                         IsScrollEnabled="True"
                         MapType="Hybrid" />
            </Frame>

            <!-- Point Coordinates -->
            <Frame Padding="15" BorderColor="Gray" BackgroundColor="{StaticResource CustomGray}">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Point Coordinates" 
                           FontAttributes="Bold" 
                           TextColor="White"
                           FontSize="16" />
                    <Grid ColumnSpacing="10" RowSpacing="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="2*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <Label Text="Latitude:" 
                               Grid.Column="0" 
                               Grid.Row="0" 
                               TextColor="White"
                               VerticalOptions="Center" />
                        <Label Text="Longitude:" 
                               Grid.Column="2" 
                               Grid.Row="0" 
                               TextColor="White"
                               VerticalOptions="Center" />

                        <Border x:Name="CenterLatBorder"
                                Grid.Column="0" 
                                Grid.Row="1"
                                Stroke="{StaticResource Gray500}"
                                StrokeThickness="1">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="5"/>
                            </Border.StrokeShape>
                            <Entry x:Name="CenterLatEntry" 
                                   Placeholder="107.5" 
                                   TextColor="White"
                                   PlaceholderColor="{StaticResource Gray500}"
                                   TextChanged="OnEntryTextChanged"
                                   Keyboard="Numeric" />
                        </Border>

                        <Border Grid.Column="1"
                                Grid.Row="1"
                                BackgroundColor="{StaticResource CustomGray}"
                                Stroke="{StaticResource Gray500}"
                                StrokeThickness="1">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="5"/>
                            </Border.StrokeShape>
                            <Picker x:Name="LatDirectionPicker"
                                    TextColor="White"
                                    BackgroundColor="Transparent"
                                    SelectedIndexChanged="OnDirectionChanged" />
                        </Border>

                        <Border x:Name="CenterLongBorder"
                                Grid.Column="2" 
                                Grid.Row="1"
                                Stroke="{StaticResource Gray500}"
                                StrokeThickness="1">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="5"/>
                            </Border.StrokeShape>
                            <Entry x:Name="CenterLongEntry" 
                                   Placeholder="57.5" 
                                   TextColor="White"
                                   PlaceholderColor="{StaticResource Gray500}"
                                   TextChanged="OnEntryTextChanged"
                                   Keyboard="Numeric" />
                        </Border>

                        <Border Grid.Column="3"
                                Grid.Row="1"
                                BackgroundColor="{StaticResource CustomGray}"
                                Stroke="{StaticResource Gray500}"
                                StrokeThickness="1">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="5"/>
                            </Border.StrokeShape>
                            <Picker x:Name="LongDirectionPicker"
                                    TextColor="White"
                                    BackgroundColor="Transparent"
                                    SelectedIndexChanged="OnDirectionChanged" />
                        </Border>
                    </Grid>

                    <HorizontalStackLayout Spacing="10" Margin="0,10,0,0">
                        <Label Text="Format:" 
                               TextColor="White"
                               VerticalOptions="Center"/>
                        <RadioButton x:Name="GeoTiffRadioButton" 
                                   Content="GeoTIFF" 
                                   GroupName="FileFormat" 
                                   IsChecked="True"
                                   TextColor="White"
                                   VerticalOptions="Center"/>
                        <RadioButton x:Name="AsciiRadioButton" 
                                   Content="ESRI ASCII" 
                                   GroupName="FileFormat"
                                   TextColor="White"
                                   VerticalOptions="Center"/>
                    </HorizontalStackLayout>
                </VerticalStackLayout>
            </Frame>

            <!-- Download Folder -->
            <Frame Padding="15" BorderColor="Gray" BackgroundColor="{StaticResource CustomGray}">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Download Folder" 
                           FontAttributes="Bold" 
                           TextColor="White"
                           FontSize="16" />
                    <Border Stroke="{StaticResource Gray500}"
                            StrokeThickness="1">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="5"/>
                        </Border.StrokeShape>
                        <Entry x:Name="DownloadFolderEntry"
                               TextColor="White"
                               PlaceholderColor="{StaticResource Gray500}"
                               BackgroundColor="Transparent"/>
                    </Border>
                </VerticalStackLayout>
            </Frame>

            <!-- Error Message -->
            <Label x:Name="ErrorLabel"
                   Text="Some fields are empty or incorrect"
                   TextColor="{StaticResource ErrorColor}"
                   IsVisible="false"
                   HorizontalOptions="Center" />

            <!-- Download Button with Spinner -->
            <Grid>
                <Button
                    x:Name="DownloadButton"
                    Text="Download SRTM File"
                    SemanticProperties.Hint="Downloads the SRTM file for the specified coordinates"
                    Clicked="OnDownloadClicked"
                    BackgroundColor="{StaticResource Primary}"
                    TextColor="White"
                    HorizontalOptions="Fill" />
                    
                <ActivityIndicator 
                    x:Name="DownloadSpinner"
                    IsRunning="False"
                    IsVisible="False"
                    Color="White"
                    HorizontalOptions="Center"
                    VerticalOptions="Center" />
            </Grid>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
