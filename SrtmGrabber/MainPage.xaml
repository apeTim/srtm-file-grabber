<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SrtmGrabber.MainPage"
             BackgroundColor="{AppThemeBinding Light={StaticResource Gray100}, Dark={StaticResource Gray900}}">

    <ContentPage.Resources>
        <Color x:Key="CustomPink">#512BD4</Color>
        <Color x:Key="CustomGray">#2D2D2D</Color>
        <Color x:Key="ErrorColor">#FF6347</Color>
    </ContentPage.Resources>

    <ScrollView>
        <VerticalStackLayout
            Padding="30,20"
            Spacing="20">
            
            <Label
                Text="SRTM File Coordinates"
                Style="{StaticResource Headline}"
                TextColor="White"
                SemanticProperties.HeadingLevel="Level1"
                HorizontalOptions="Center" />

            <!-- Latitude Input -->
            <Frame Padding="15" BorderColor="Gray" BackgroundColor="{StaticResource CustomGray}">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Latitude" 
                           FontAttributes="Bold" 
                           TextColor="White"
                           FontSize="16" />
                    <Grid ColumnSpacing="10" RowSpacing="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <Label Text="Min:" 
                               Grid.Column="0" 
                               Grid.Row="0" 
                               TextColor="White"
                               VerticalOptions="Center" />
                        <Border x:Name="LatMinBorder"
                                Grid.Column="0" 
                                Grid.Row="1"
                                Stroke="{StaticResource Gray500}"
                                StrokeThickness="1">
                            <Entry x:Name="LatMinEntry" 
                                   Placeholder="110 S" 
                                   TextColor="White"
                                   PlaceholderColor="{StaticResource Gray500}"
                                   TextChanged="OnEntryTextChanged" />
                        </Border>

                        <Label Text="Max:" 
                               Grid.Column="1" 
                               Grid.Row="0" 
                               TextColor="White"
                               VerticalOptions="Center" />
                        <Border x:Name="LatMaxBorder"
                                Grid.Column="1" 
                                Grid.Row="1"
                                Stroke="{StaticResource Gray500}"
                                StrokeThickness="1">
                            <Entry x:Name="LatMaxEntry" 
                                   Placeholder="105 S" 
                                   TextColor="White"
                                   PlaceholderColor="{StaticResource Gray500}"
                                   TextChanged="OnEntryTextChanged" />
                        </Border>
                    </Grid>
                </VerticalStackLayout>
            </Frame>

            <!-- Longitude Input -->
            <Frame Padding="15" BorderColor="Gray" BackgroundColor="{StaticResource CustomGray}">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Longitude" 
                           FontAttributes="Bold" 
                           TextColor="White"
                           FontSize="16" />
                    <Grid ColumnSpacing="10" RowSpacing="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <Label Text="Min:" 
                               Grid.Column="0" 
                               Grid.Row="0" 
                               TextColor="White"
                               VerticalOptions="Center" />
                        <Border x:Name="LongMinBorder"
                                Grid.Column="0" 
                                Grid.Row="1"
                                Stroke="{StaticResource Gray500}"
                                StrokeThickness="1">
                            <Entry x:Name="LongMinEntry" 
                                   Placeholder="55 E" 
                                   TextColor="White"
                                   PlaceholderColor="{StaticResource Gray500}"
                                   TextChanged="OnEntryTextChanged" />
                        </Border>

                        <Label Text="Max:" 
                               Grid.Column="1" 
                               Grid.Row="0" 
                               TextColor="White"
                               VerticalOptions="Center" />
                        <Border x:Name="LongMaxBorder"
                                Grid.Column="1" 
                                Grid.Row="1"
                                Stroke="{StaticResource Gray500}"
                                StrokeThickness="1">
                            <Entry x:Name="LongMaxEntry" 
                                   Placeholder="60 E" 
                                   TextColor="White"
                                   PlaceholderColor="{StaticResource Gray500}"
                                   TextChanged="OnEntryTextChanged" />
                        </Border>
                    </Grid>
                </VerticalStackLayout>
            </Frame>

            <!-- Center Point -->
            <Frame Padding="15" BorderColor="Gray" BackgroundColor="{StaticResource CustomGray}">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Center Point" 
                           FontAttributes="Bold" 
                           TextColor="White"
                           FontSize="16" />
                    <Grid ColumnSpacing="10" RowSpacing="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <Label Text="Latitude:" 
                               Grid.Column="0" 
                               Grid.Row="0" 
                               TextColor="White"
                               VerticalOptions="Center" />
                        <Border x:Name="CenterLatBorder"
                                Grid.Column="0" 
                                Grid.Row="1"
                                Stroke="{StaticResource Gray500}"
                                StrokeThickness="1">
                            <Entry x:Name="CenterLatEntry" 
                                   Placeholder="107.5 S" 
                                   TextColor="White"
                                   PlaceholderColor="{StaticResource Gray500}"
                                   TextChanged="OnEntryTextChanged" />
                        </Border>

                        <Label Text="Longitude:" 
                               Grid.Column="1" 
                               Grid.Row="0" 
                               TextColor="White"
                               VerticalOptions="Center" />
                        <Border x:Name="CenterLongBorder"
                                Grid.Column="1" 
                                Grid.Row="1"
                                Stroke="{StaticResource Gray500}"
                                StrokeThickness="1">
                            <Entry x:Name="CenterLongEntry" 
                                   Placeholder="57.5 E" 
                                   TextColor="White"
                                   PlaceholderColor="{StaticResource Gray500}"
                                   TextChanged="OnEntryTextChanged" />
                        </Border>
                    </Grid>
                </VerticalStackLayout>
            </Frame>

            <!-- Error Message -->
            <Label x:Name="ErrorLabel"
                   Text="Some fields are empty or incorrect"
                   TextColor="{StaticResource ErrorColor}"
                   IsVisible="false"
                   HorizontalOptions="Center" />

            <Button
                x:Name="DownloadButton"
                Text="Download SRTM File"
                SemanticProperties.Hint="Downloads the SRTM file for the specified coordinates"
                Clicked="OnDownloadClicked"
                BackgroundColor="{StaticResource Primary}"
                TextColor="White"
                HorizontalOptions="Fill" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
